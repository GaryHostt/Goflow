    {
      "name": "Credentials",
      "item": [
        {
          "name": "Create Slack Credential",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.id) {",
                  "        pm.collectionVariables.set('credentialId', response.data.id);",
                  "        console.log('Credential ID saved:', response.data.id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"service_name\": \"slack\",\n  \"api_key\": \"https://hooks.slack.com/services/T00000000/B00000000/XXXX\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/credentials",
              "host": ["{{baseUrl}}"],
              "path": ["api", "credentials"]
            },
            "description": "Save encrypted Slack webhook URL"
