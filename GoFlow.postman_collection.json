            "url": {
              "raw": "{{baseUrl}}/api/webhooks/{{workflowId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "webhooks", "{{workflowId}}"]
            },
            "description": "Trigger webhook with idempotency key (cached for 24h)"
          },
          "response": []
